@model IEnumerable<FinalProject.DATA.EF.Reservations>

@{
    ViewBag.Title = "Index";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>@ViewBag.Title</h2>
            @if (User.IsInRole("Admin") || User.IsInRole("Client"))
            {
                <ol>
                    <li>@Html.ActionLink("Create New", "Create", null, new { @class = "btn-get-started btn-background" })</li>
                </ol>
            }

        </div>
    </div>
</section><!-- End Breadcrumbs -->

<section>
    <div class="container">
        <table id="table_id" class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ReservationDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Homes.HomeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Locations.LocationName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Services.ServiceType)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReservationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Homes.HomeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Locations.LocationName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Services.ServiceType)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ReservationId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ReservationId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ReservationId })
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</section>
