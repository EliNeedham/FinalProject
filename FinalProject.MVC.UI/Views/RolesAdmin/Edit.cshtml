@model FinalProject.MVC.UI.Models.RoleViewModel

@{
    ViewBag.Title = "Roles Admin | Edit";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>@ViewBag.Title</h2>
                <ol>
                    <li>@Html.ActionLink("Back to List", "Index", null, new { @class = "btn-get-started btn-background" })</li>
                </ol>
        </div>
    </div>
</section><!-- End Breadcrumbs -->

<section>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <div class = "control-label col-md-2">
                        Role Name
                    </div>
                    @*@Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn-get-started btn-background" />
                    </div>
                </div>
            </div>
        }

    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
