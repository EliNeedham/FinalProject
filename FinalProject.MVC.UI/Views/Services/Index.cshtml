@model IEnumerable<FinalProject.DATA.EF.Services>

@{
    ViewBag.Title = "Services";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>@ViewBag.Title</h2>
            <ol>
                @if (User.IsInRole("Admin"))
                {
                    <li>@Html.ActionLink("Create New", "Create", null, new { @class = "btn-get-started btn-background" })</li>
                }
            </ol>
        </div>

    </div>
</section><!-- End Breadcrumbs -->
<!-- ======= Services Section ======= -->
<section id="services" class="services section-bg">
    <div class="container" data-aos="fade-up">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                    <div class="icon-box iconbox-blue">
                        <h4>@Html.DisplayFor(modelItem => item.ServiceType)</h4>
                        <p>@Html.DisplayFor(modelItem => item.Description)</p>
                        <h4>@Html.DisplayFor(modelItem => item.Price)</h4>
                        @if (User.IsInRole("Admin"))
                        {
                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ServiceId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ServiceId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ServiceId })
                            </p>
                        }

                    </div>
                </div>
            }
        </div>
    </div>
</section><!-- End Services Section -->

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        @if (User.IsInRole("Admin"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ServiceId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ServiceId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ServiceId })
            </td>
        }

    </tr>
    }

</table>
