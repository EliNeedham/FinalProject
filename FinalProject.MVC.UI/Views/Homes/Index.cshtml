@model IEnumerable<FinalProject.DATA.EF.Homes>

@{
    ViewBag.Title = "Homes";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>@ViewBag.Title</h2>
            <ol>
                <li>@Html.ActionLink("Create New", "Create", null, new { @class = "btn-get-started" })</li>
            </ol>
        </div>
    </div>
</section><!-- End Breadcrumbs -->

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HomeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomePhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SpecialNotes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserDetails.CompanyName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HomeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                <img src="~/Content/assets/img/Uploads/t_@item.HomePhoto" alt="Home Photo" title="@item.HomeName" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserDetails.CompanyName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.HomeId }) |
                @Html.ActionLink("Details", "Details", new { id = item.HomeId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.HomeId })
            </td>
        </tr>
    }

</table>
