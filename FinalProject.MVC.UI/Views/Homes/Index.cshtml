@model IEnumerable<FinalProject.DATA.EF.Homes>

@{
    ViewBag.Title = "Homes";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>@ViewBag.Title</h2>
            <ol>
                    <li>@Html.ActionLink("Create New", "Create", null, new { @class = "btn-get-started btn-background" })</li>
            </ol>
        </div>
    </div>
</section><!-- End Breadcrumbs -->
<!-- ======= Homes Section ======= -->
<section id="services" class="services section-bg">
    <div class="container" data-aos="fade-up">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="zoom-in" data-aos-delay="100">
                    <div class="icon-box iconbox-blue">
                        <div class="icon" id="override">
                            <svg width="100" height="100" viewBox="0 0 600 600" xmlns="http://www.w3.org/2000/svg">
                                <img src="~/Content/assets/img/Uploads/@item.HomePhoto" alt="Home Photo" title="@item.HomeName" style="width: 100%;" />
                                </svg>
                        </div>
                        <div class="text">
                            <h2>@Html.DisplayFor(model => item.HomeName)</h2>
                            <p>@Html.DisplayFor(model => item.Address)</p>
                            <p>
                                @Html.DisplayFor(model => item.City)
                                @Html.DisplayFor(model => item.State)
                            </p>
                            <p>@Html.DisplayFor(model => item.ZipCode)</p>
                            <p>@Html.DisplayFor(model => item.SpecialNotes)</p>
                            @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                            {
                                <p>
                                    <strong>@Html.DisplayNameFor(model => model.IsActive)</strong>
                                    @Html.DisplayFor(model => item.IsActive)
                                </p>
                            }
                            <p><strong>@Html.DisplayNameFor(model => model.DateAdded)</strong></p>
                            <p>@Html.DisplayFor(model => item.DateAdded)</p>
                            <h5>@Html.DisplayNameFor(model => model.UserDetails.FullName)</h5>
                            <h5>@Html.DisplayFor(modelItem => item.UserDetails.FullName)</h5>
                                <p>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.HomeId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.HomeId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.HomeId })
                                </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section><!-- End Homes Section -->

<section>
    <div class="container">
        <table id="table_id" class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.HomeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ZipCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HomePhoto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SpecialNotes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateAdded)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserDetails.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserDetails.CompanyName)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.HomeName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ZipCode)
                    </td>
                    <td>
                        <img src="~/Content/assets/img/Uploads/t_@item.HomePhoto" alt="Home Photo" title="@item.HomeName" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpecialNotes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateAdded)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserDetails.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserDetails.CompanyName)
                    </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.HomeId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.HomeId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.HomeId })
                        </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</section>
